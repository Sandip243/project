@model Online_Pizza_Ordering_System.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<html>
<head>
    <style>
        body {
            background-image: url("/Uploads/reg.jpg");
            background-repeat: no-repeat;
            background-size: 100% 100%;
            background-attachment: fixed;
            /*background-blend-mode: darken;*/
        }

    </style>
</head>
<body>


    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container-fluid">

<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
            <h2>Register at the OnlinePizzaShop today, It's free!</h2>
    <h4>Create a new account and order your first pizza today!</h4>
    <hr />
    <ul>
@*        @if (Model.Errors.Count() > 0)
        {
            @foreach (var error in Model.Errors)
            {
                <li><div asp-validation-summary="All" class="text-danger"> @error</div> </li>
                @*<div asp-validation-summary="All" class="text-danger"> @error</div>
          }
        }*@
    </ul>
    <div class="form-group">
        <label asp-for="Email" class="col-md-4 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control"placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password" class="col-md-4 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Register" class="btn btn-primary" />&nbsp; &nbsp;
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login"><i class="bi bi-key-fill"></i>Login</a>
        </div>
    </div>
</form>
</div>
</body>
</html>


























